[kelvins-server]
IsRecordCallResponse = true
Environment = "dev"

[kelvins-logger]
RootPath = "./logs"
Level = "debug"

[kelvins-mysql]
Host = "127.0.0.1:3306"
UserName = "root"
Password = "xxx"
DBName = "micro_mall_order"
Charset = "utf8"
PoolNum =  10
MaxIdleConns = 5
ConnMaxLifeSecond = 3600
MultiStatements = true
ParseTime = true

[kelvins-redis]
Host = "127.0.0.1:6379"
Password = "xxxx"
DB = 12
PoolNum = 10

[kelvins-queue-server]
CustomQueueList = "trade_order_notice,trade_order_pay_callback"
WorkerConcurrency = 5

[kelvins-queue-amqp]
Broker = "amqp://micro-mall:szJ9aePR@localhost:5672/micro-mall"
DefaultQueue = "trade_order_notice"
ResultBackend = "redis://xxxx@127.0.0.1:6379/10"
ResultsExpireIn = 36000
Exchange = "trade_order_notice"
ExchangeType = "direct"
BindingKey = "trade_order_notice"
PrefetchCount = 10
TaskRetryCount = 3
TaskRetryTimeout = 36000

[email-config]
User = "xxxx@qq.com"
Password = "xxx"
Host = "smtp.qq.com"
Port = "465"

[email-notice]
Receivers = "xx@qq.com"